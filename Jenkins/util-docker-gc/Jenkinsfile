@Library('global-shared-library') _

nodes = [
  'master',
  'jenkins-slave',
  'jenkins-slave2'
]

ansiColor('xterm') {
  node(){

    properties([
      buildDiscarder(logRotator(artifactDaysToKeepStr: '', numToKeepStr: '10')),
      pipelineTriggers([cron("TZ=Europe/London\nH/4 * * * *")])
    ])
  }

  nodes.each { node ->
    cleanupDocker(node)
  }

}
